    <div>
        <a href="/dashboard/create/"><button id="create-thread" class="button">create post</button></a>
        
        <h2>dashboard: your posts</h2><hr>
{{#if thread.length}}
    </div>

    {{#each threads as |thread|}}
        <div class="card">
            <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
        <p>Posted by {{user.username}} on {{format_date created_at}}</p>
            </div>
        </div>
    {{/each}}

{{else}}
<h6>you do not currently have any posts</h6>

{{/if}}

