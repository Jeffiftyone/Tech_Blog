<!-- Loop over each object in the projects array -->
{{#each threads as |thread| }}
<div class="row mb-4 thread">
  <div class="col-md-5">
    <h2>
      <a href="/thread/{{thread.id}}">{{thread.title}}</a>
    <p>Posted by {{thread.user.name}} on {{format_date thread.post_date}}</p>
      <p>
      {{thread.body}}
    </p>
  </div>
  <div>

  </div>
</div>
{{/each}}
