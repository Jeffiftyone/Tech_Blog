<div>
 <div class="text-center">
   <h2 >{{title}}</h2>
 </div>
  
    <p>Created by {{user.name}} on {{format_date post_date}}</p>
  <p>{{body}}</p>

<form class="form new-comment-form">
  <div class="form-group">
    <label for="reply-text">Reply:</label>
    <input class="form-input" type="text" id="reply-text" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>

{{!-- <script src="../js/reply.js"></script> --}}

  {{!-- All other replies --}}
 
  <h3>Comments:</h3>
  {{#each replies as |reply| }}
<div class="row mb-4 thread">
  <div class="col-md-5">
    <p>Posted on {{format_date reply.post_date}} by {{reply.user.name}}</p>
      <p>
      {{reply.body}}
    </p>
  </div>
</div>
{{/each}}


</div>
